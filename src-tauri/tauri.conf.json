{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Korppi",
  "version": "0.1.999",
  "identifier": "com.korppi.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "Korppi",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "useHttpsScheme": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": [
          "**"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "linux": {
      "appimage": {
        "bundleMediaFramework": true
      }
    },
    "windows": {
      "nsis": {
        "installMode": "both"
      }
    },
    "fileAssociations": [
      {
        "ext": [
          "kmd"
        ],
        "mimeType": "application/vnd.korppi.document+zip",
        "description": "Korppi Markdown Document"
      }
    ]
  },
  "plugins": {}
}