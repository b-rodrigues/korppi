{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Korppi Prototype",
  "version": "0.1.0",
  "identifier": "com.korppi.prototype",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "Korppi Prototype",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [],
    "fileAssociations": [
      {
        "ext": [
          "kmd"
        ],
        "mimeType": "application/vnd.korppi.document+zip",
        "description": "Korppi Markdown Document"
      }
    ]
  },
  "plugins": {}
}